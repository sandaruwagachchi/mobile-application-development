<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stylingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF9C4">

    <TextView
        android:id="@+id/txtStyled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Styled TextView"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#FFECB3"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editStyled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter text here"
        android:padding="12dp"
        android:backgroundTint="#FF5722"
        android:textColorHint="#999999"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/txtStyled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnStyled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Me"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#03A9F4"
        app:layout_constraintTop_toBottomOf="@id/editStyled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
